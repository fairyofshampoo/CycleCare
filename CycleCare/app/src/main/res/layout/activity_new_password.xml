<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title Text -->
            <TextView
                android:id="@+id/tvVerifyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_new_password"
                android:textAlignment="center"
                style="@style/TitleTextViewStyle" />

            <!-- Description Text -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_blue"
                android:textSize="20sp"
                android:text="@string/new_password_description"
                android:textAlignment="center"/>

            <!-- New Password Label -->
            <TextView
                android:id="@+id/tvNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/lbl_new_password"
                android:textColor="@color/gray_blue"
                android:textAllCaps="true"
                android:layout_marginStart="20dp"
                android:textSize="16sp"/>

            <!-- New Password Input -->
            <EditText
                android:id="@+id/newPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:inputType="textPassword"
                android:layout_marginEnd="20dp"
                style="@style/EditTextStyle" />

            <!-- Confirm Password Label -->
            <TextView
                android:id="@+id/tvConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/lbl_confirm_password"
                android:textColor="@color/gray_blue"
                android:layout_marginStart="20dp"
                android:textSize="16sp"/>

            <!-- Confirm Password Input -->
            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                style="@style/EditTextStyle" />

            <!-- Passwords Not Matching Message -->
            <TextView
                android:id="@+id/tvPasswordsNotMatching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:text="@string/passwords_match_text_error"
                android:textColor="@color/strong_pink" />

            <!-- Save Password Button -->
            <Button
                android:id="@+id/btnSavePassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/btn_change_password"
                android:textAllCaps="false"
                android:layout_gravity="center"
                style="@style/ButtonStyle" />
        </LinearLayout>
    </ScrollView>
</layout>