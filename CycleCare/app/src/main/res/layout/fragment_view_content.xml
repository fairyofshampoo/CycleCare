<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <ScrollView
        android:layout_width="410dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ViewContentFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@android:drawable/ic_menu_gallery"/>

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_tittle_label"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"/>


            <TextView
                android:textColor="@color/soft_pink94"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/author_content_label"
                android:textSize="12sp"
                android:layout_marginTop="30dp"/>


            <TextView
                android:textColor="@color/soft_pink94"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_date_label"
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>
            
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:layout_gravity="right"
                android:layout_marginEnd="20sp"/>

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_label"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20sp"/>

        </LinearLayout>
    </FrameLayout>
    </ScrollView>
</layout>