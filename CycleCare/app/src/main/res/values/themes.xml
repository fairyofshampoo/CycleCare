<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CycleCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!--Primary brand color -->
        <item name="colorPrimary">@color/main_pink</item>
        <item name="colorPrimaryVariant">@color/strong_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/poppins_font</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_blue</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CycleCare" parent="Base.Theme.CycleCare" />
</resources>