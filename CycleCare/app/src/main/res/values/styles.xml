<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edittext_rounded_background</item>
        <item name="android:textColorHint">@color/gray_blue</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextForDescriptionStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edittext_rounded_for_descriptions_background</item>
        <item name="android:textColorHint">@color/gray_blue</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="color">@color/main_pink</item>
        <item name="android:background">@drawable/button_rounded_background</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/main_pink</item>
        <item name="android:gravity">top|center_horizontal</item>
    </style>
</resources>